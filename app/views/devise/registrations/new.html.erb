<div class="signup-page">
  <h2>会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
    <% if resource.errors.any? %>
      <div class="error-messages">
        <ul>
          <% resource.errors.messages.each do |attribute, messages| %>
            <% messages.uniq.each do |message| %>
              <li><%= message %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name, "名前" %><br>
      <%= f.text_field :name, required: true, placeholder: "名前を入力してください" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, required: true, placeholder: "メールアドレスを入力してください" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上入力してください)</em>
      <% end %><br />
      <%= f.password_field :password, required: true, placeholder: "パスワードを入力してください" %>
    </div>

    <div class="actions">
      <%= f.submit "会員登録", class: "custom-button" %>
    </div>
  <% end %>

  <div class="links">
    <%= render "devise/shared/links" %>
  </div>
</div>
