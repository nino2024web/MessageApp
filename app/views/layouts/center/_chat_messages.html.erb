<div id="chat-messages" class="chat-messages">
  <% messages.each do |message| %>
    <div class="message <%= message.user_id == current_user.id ? 'own-message' : 'other-message' %>">
      <p class="content"><%= message.content %></p>
      <p class="timestamp"><%= message.created_at.strftime("%Y/%m/%d %H:%M") %></p>
    </div>
  <% end %>
</div>
