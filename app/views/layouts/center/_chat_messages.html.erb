<div id="chat-messages" class="chat-messages">
  <% if messages.empty? %>
    <p class="no-message">まだメッセージがありません</p>
  <% else %>
    <% messages.each do |message| %>
      <div class="message <%= message.user_id == current_user.id ? 'mine' : 'theirs' %>">
        <p class="content"><%= message.content %></p>
        <p class="timestamp"><%= message.created_at.strftime("%Y/%m/%d %H:%M") %></p>
      </div>
    <% end %>
  <% end %>
  <div id="scroll-anchor"></div>
</div>
