  <!-- 友達リスト -->
<turbo-frame id="friend-list">
  <div class="friend-list-container">
    <% if all_friends.any? %>
      <ul class="friend-list">
        <li class="friend-item <%= 'hidden' if index >= 5 %>">
          <span><%= friend.name %></span>
          <%= button_to "チャット開始", start_chat_path(friend), method: :post, class: "start-chat-btn" %>
        </li>
      </ul>
    <% else %>
      <p class="no-chat-message">現在友達は未登録です</p>
    <% end %>
  </div>
</turbo-frame>
